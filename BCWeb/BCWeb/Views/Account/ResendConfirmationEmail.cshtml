@model BCWeb.Models.ResendConfirmationEmailModel
@{
    ViewBag.Title = "Resend Confirmation Email";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Please enter your email address.</legend>
        <ul>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
        </ul>
        <input type="submit" value="Resend Confirmation Email" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}