@model ICollection<BCWeb.Models.ExternalSignIn>

@if (Model.Count> 0)
{
    <h3>Registered external SignIns</h3>
    <table>
        <tbody>
            @foreach (BCWeb.Models.ExternalSignIn externalSignIn in Model)
            {
                <tr>
                    <td>@externalSignIn.ProviderDisplayName</td>
                    <td>
                        @if (ViewBag.ShowRemoveButton)
                        {
                            using (Html.BeginForm("Disassociate", "Account"))
                            {
                            @Html.AntiForgeryToken()
                            <div>
                                @Html.Hidden("provider", externalSignIn.Provider)
                                @Html.Hidden("providerUserId", externalSignIn.ProviderUserId)
                                <input type="submit" value="Remove" title="Remove this @externalSignIn.ProviderDisplayName credential from your account" />
                            </div>
                            }
                        }
                        else
                        {
                            @: &nbsp;
                    }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}