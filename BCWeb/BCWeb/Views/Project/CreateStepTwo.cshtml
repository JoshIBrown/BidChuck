@model BCWeb.Models.Project.ViewModel.ProjectEditModel
@using BCWeb.Helpers

@{
    ViewBag.Title = "Create Project";
    Layout = "~/Views/Shared/_Foundation.cshtml";
}

<div class="row">
    <div class="large-4 columns large-centered">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="large-12 columns large-centered" ng-controller="ProjectCtrl">
        @using (Html.BeginRouteForm("Default", new { controller = "Project", action = "CreateStepTwo" }, FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.EditorFor(m => m)
            <input type="submit" value="Create" class="medium button" />
        }
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/createproject")
}