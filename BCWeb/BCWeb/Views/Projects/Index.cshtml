@{
    ViewBag.Title = "Projects";
}

<div class="row">
    <div class="large-4 columns left">
        <h2>Projects</h2>
        @if (User.IsInRole("architect"))
        {
            @Html.RouteLink("Create new Project", "Default", new { controller = "Projects", action = "Create" })
        }
    </div>
</div>
<div class="row" ng-app="projectIndex">
    <div class="large-8 columns" ng-controller="ProjectIndexCtrl">
        <h5>my projects</h5>
        <div class="row">
            <div class="large-12 columns">
                <table>
                    <thead>
                        <tr>
                            <th>Id
                            </th>
                            <th>Name
                            </th>
                            <th>Architect
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="mcp in myCreateProjects">
                            <td>{{mcp.Id}}
                            </td>
                            <td>{{mcp.Title}}
                            </td>
                            <td>{{mcp.Architect}}
                            </td>
                            <td>
                                <a href="/Projects/Details/{{mcp.Id}}">Details</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/projectindex")
}