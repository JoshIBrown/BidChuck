@model List<BCWeb.Areas.Admin.Models.Projects.ViewModel.ProjectListItem>

@{
    ViewBag.Title = "UpdateEmptyLatLong";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row">
    <div class="large-8 columns">
        <h2>UpdateEmptyLatLong</h2>
        <p>Clicking update will cause the server to loop through the projects listed, and update their geolocation information using bing maps api.</p>
    </div>
</div>
<div class="row">
    <div class="large-6 columns">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <ul>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <li>
                        <input type="hidden" name="@string.Format("projectId[{0}]", i)" value ="@Model[i].Id" />
                        @string.Format("{0} --- {1} --- {2}", Model[i].Title, Model[i].Number, Model[i].Architect)
                    </li>
                }
            </ul>
            <input type="submit" value="Update" />
        }
    </div>
</div>

