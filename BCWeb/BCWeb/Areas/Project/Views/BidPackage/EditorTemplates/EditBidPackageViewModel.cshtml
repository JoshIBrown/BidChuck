@model BCWeb.Areas.Project.Models.BidPackage.ViewModel.EditBidPackageViewModel
<div class="row">
    <div class="large-4 columns left">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ProjectId)
        @Html.HiddenFor(m => m.TemplateId)
        @Html.AntiForgeryToken()
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description)
        @Html.LabelFor(m => m.BidDateTime)
        @Html.TextBoxFor(m => m.BidDateTime)
        @Html.LabelFor(m => m.WalkThroughDateTime)
        @Html.TextBoxFor(m => m.WalkThroughDateTime)
        @Html.LabelFor(m => m.Notes)
        @Html.TextAreaFor(m => m.Notes)
    </div>
    <div class="large-12 columns left">
        @if (Model.SelectedScope != null)
        {
            <div style="display: none;" id="passBackScopes">
                @for (int s = 0; s < Model.SelectedScope.Count(); s++)
                {
                    @Html.HiddenFor(m => m.SelectedScope[s])
                }
            </div>
        }
        <csi-scope-picker service-url="theServiceUrl" selected-scopes="passBackSelection"></csi-scope-picker>
    </div>
</div>
