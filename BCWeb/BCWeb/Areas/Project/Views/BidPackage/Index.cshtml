@model BCWeb.Areas.Project.Models.BidPackage.ViewModel.ProjectBidPackagesViewModel
@{
    ViewBag.Title = "Bid Packages";
    Layout = "~/Views/Shared/_Foundation.cshtml";
}

<div class="row">
    <div class="large-12 columns">
        <ul class="breadcrumbs">
            <li><a href="/">Home</a></li>
            <li>@Html.RouteLink("Projects", "Default", new { controller = "Project", action = "Index" })</li>
            <li>@Html.RouteLink(Model.ProjectName, "Default", new { controller = "Project", action = "Details", id = Model.ProjectId })</li>
            <li class="current"><a href="#">Manage Bid Packages</a></li>
        </ul>
    </div>
</div>


@foreach (var bp in Model.BidPackages)
{
    <div class="row">
        <div class="large-8 columns">
            <div class="panel">
                <div class="row">
                    <div class="large-12 columns">
                        <h5>@bp.Description</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="large-4 columns">
                        Bid Date/Time: @bp.BidDateTime
                    </div>
                    <div class="large-6 columns">Coverage: @bp.Invited/@bp.Accepted/@bp.Declined (invited/accepted/declined)</div>
                    <div class="large-2 columns">@Html.RouteLink("Details...", "Project_default", new { controller = "BidPackage", action = "Details", id = bp.Id })</div>
                </div>
            </div>
        </div>
    </div>
}