@model BCWeb.Areas.Project.Models.BidPackage.ViewModel.EditBidPackageViewModel
@{
    ViewBag.Title = "Edit Bid Package";
    Layout = "~/Views/Shared/_Foundation.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="large-4 columns left">
            <h2>@ViewBag.Title</h2>

        </div>
        <div class="large-4 columns left">
            <br />
            <input type="submit" value="Save" class="medium button" />
        </div>
    </div>
    <div ng-controller="BidPackageCtrl">
        @Html.ValidationSummary()
        @Html.EditorForModel()
        <div class="row">
            <div class="large-4 columns left">
                <input type="submit" value="Save" class="medium button" />
            </div>
        </div>
    </div>
}
@section scripts{
    @Scripts.Render("~/bundles/bidpackageedit")
}