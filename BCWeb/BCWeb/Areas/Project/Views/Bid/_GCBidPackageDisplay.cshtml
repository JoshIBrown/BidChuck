@model IEnumerable<BCWeb.Areas.Project.Models.Bids.ViewModel.BaseBidViewItem>


<table>
    <thead>
        <tr>
            <th>Scope</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => m.ElementAt(i).ScopeDescription)
                </td>
                <td>
                    @Html.DisplayFor(m => m.ElementAt(i).Amount)
                </td>
            </tr>
        }
    </tbody>
</table>

