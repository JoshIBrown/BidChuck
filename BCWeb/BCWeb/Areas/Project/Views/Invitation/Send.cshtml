@{
    ViewBag.Title = "Send Invitation";
    Layout = "~/Views/Shared/_Foundation.cshtml";
}

<div class="row">
    <div class="large-4 columns left">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div ng-controller="SendInvitationCtrl">
    <div class="row">
        <div class="large-8 columns left">
            <form name="searchForm">
                <input type="text" name="companySearchString" id="companySearchString" ng-model="companySearchString" />
                <input type="button" value="search" ng-click="searchCompanies()" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="large-8 columns left">
            {{companies}}
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/sendinvitation")
}
